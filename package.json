{
  "name": "whatsapp-telegram-bridge",
  "private": true,
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start:backend": "nx serve backend",
    "start:frontend": "nx serve frontend",
    "build": "nx run-many --target=build",
    "format:check": "nx run-many --target=format:check",
    "format:write": "nx run-many --target=format:write",
    "lint": "nx run-many --target=lint",
    "test": "nx run-many --target=test",
    "test:watch": "nx run-many --target=test:watch",
    "tsc": "nx run-many --target=tsc",
    "prevalidate": "yarn format:write",
    "validate": "run-p format:check lint tsc"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nx/eslint": "21.5.2",
    "@nx/jest": "21.5.2",
    "@nx/vite": "21.5.2",
    "@nx/webpack": "21.5.2",
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/qrcode-terminal": "^0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jiti": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "nx": "21.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typegram": "^5.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.2",
    "webpack": "^5.93.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format:write format:check lint tsc"
    ],
    "*.{json,md}": [
      "yarn format:write format:check lint"
    ]
  }
}
